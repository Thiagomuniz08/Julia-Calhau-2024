#include<stdio.h>
int main (){
    float soma, nota1, nota2, nota3, media;
    int resp;
        soma=0;
        media=0;
         do{
    
        printf("Digite a primeira nota :");
        scanf("%f",&nota1);
        printf("Digite a segunda nota :");
        scanf("%f", &nota2);
        printf("Digite a terceira nota :");
        scanf("%f", &nota3);
        
      soma = nota1 + nota2 + nota3;
      media = (nota1 + nota2 + nota3) /3;
      printf("a soma das notas é: %2.f",soma);
      printf("\n a media do aluno é: %2.f", media);
       printf("\n Digite 1 para continuar ou digite 2 para sair\n");
       scanf("%d",&resp);
       
       }while(resp==1);
       return 0;
}
