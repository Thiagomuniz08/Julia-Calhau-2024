#include<stdio.h>
int main(){
    int calculo;
    int a , b ,c;
    for(;;){
    printf("Digite uma opção de 1 a 4: se nao \n 1- soma \n 2- subtração \n 3- divisão \n 4- multiplicação \n 5- Encerrar programa \n digite:");
    scanf("%d", &calculo);
    if(calculo <= 4){
    switch(calculo){
    case 1:
    printf("Digite o primeiro número:");
    scanf("%d", &a);
    printf("Digite o segundo número:");
    scanf("%d",&b);
    c = a + b;
    printf("A soma é: %d ",c);
    break;
    }
    }else{
    printf("Encerrando programa");
    break;
    }
}
    return 0;
}
