#include <stdio.h>

int main() {
    int numero;

    do {
        printf("Digite um número: ");
        scanf("%d", &numero);

        if (numero != 4) {
            printf("Você digitou: %d\n", numero);
        }

    } while (numero = 4);

    printf("Você digitou o número 4. Fim do programa.\n");

    return 0;
}
    
